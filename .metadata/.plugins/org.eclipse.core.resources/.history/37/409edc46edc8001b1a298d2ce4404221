package rough.work;

public class Rough {
	
	static void swap(Integer[] array, int x, int y){
		int temp=x;
		array[x]=array[y];
		array[y]=temp;
	}
	
	static void quickSorting(Integer[] array, int left, int right){
		if(array==null||array.length==0) return;
		if(right-left<=0) return;
		int pivot = array[right]; int i=left; int j=right;
		while(i<=j){
			while(array[i]<pivot) i++;
			while(array[j]>pivot) j--;
			if(i<=j) {
				swap(array,i,j);
				i++; j--;
			}
		}
		quickSorting(array,left,i-1);
		quickSorting(array,i,right);
	}

	public static void main(String[] args) {
		//Rough r1 = new Rough();
		Integer[] arr= new Integer[]{5,2,9,4,1,8,7,3,6};
		quickSorting(arr, 0, arr.length-1);
		for(int k:arr) {
			System.out.print(k+" ");
		}
	}

}
